<script id="meal-event-template" type="text/x-kendo-template">
    <div class="meal-event">
        <div class="row no-gutters">
            <div class="col-12">
                <div class="header">
                    <h2 class="meal-title">Meal</h2>
                    <a class="show-search" data-toggle="collapse" href=".meal-event .search" role="button" aria-expanded="false" style="margin-top:-50px; margin-right:30px; float:right; display:block;">
                        <i class="fa fa-search" aria-hidden="true"></i>
                    </a>
                </div>
            </div>
            <div class="col-12">
                <!-- Search Items -->
                <div class="search collapse">
                    <div class="row no-gutters">
                        <div class="col-12">
                            <!-- Searchbar -->
                            <div class="searchbar d-flex">
                                <input class="form-control justify-center" ali type="text" placeholder="Search" style="width: 100%; max-width: none;" />
                                <div class="align-content-end">
                                    <button class="btn btn-success search" onclick="onSearchSingleItems()"><i class="fa fa-search" aria-hidden="true"></i></button>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="search-type btn-group btn-group-toggle d-flex justify-content-center align-content-between" data-toggle="buttons">
                                <label class="btn btn-secondary active">
                                    <input type="radio" name="options" id="recent-radio" data-search-type="recent" autocomplete="off" checked /> Recent
                                </label>
                                <label class="btn btn-secondary">
                                    <input type="radio" name="options" id="upc-radio" data-search-type="upc" autocomplete="off" /> UPC
                                </label>
                                <label class="btn btn-secondary">
                                    <input type="radio" name="options" id="branded-radio" data-search-type="branded" autocomplete="off" /> Branded
                                </label>
                                <label class="btn btn-secondary">
                                    <input type="radio" name="options" id="common-radio" data-search-type="common" autocomplete="off" /> Common
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12">
                
            </div>
        </div>
    </div>
</script>



